#/bin/bash

# Usage: RunRScript script arguments
if docker images | grep "yyuzhong/r-base" > /dev/null
then
    echo "Image already exists"
else
    docker pull yyuzhong/r-base:latest
fi

WORKDIR=$( cd $(dirname $0) ; pwd -P)

docker ps -a | grep myrdaemon | awk '{print $1}' | xargs docker stop
docker ps -a | grep myrdaemon | awk '{print $1}' | xargs docker rm

docker run -d  --name myrdaemon -v "$PWD":/tmp/rstage -w /tmp/rstage --privileged=true yyuzhong/r-base:latest tail -f /dev/null

docker exec -it myrdaemon Rscript $1 "${@:2}" 

